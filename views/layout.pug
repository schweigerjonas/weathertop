doctype.html
html
    head
        title Weathertop
        meta(charset="UTF-8")
        link(rel="stylesheet" href="/styles/styles.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous")
        meta(name="viewport" content="width=device-width, initial-scale=1")

        link(rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="")
        script(src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin="")

    body
        if page === "/"
            nav.navbar.justify-content-start.left-offset
                a.navbar-brand.fs-4(href="/") Weathertop
                a.nav-link.active.fs-5(aria-current="page" href="/signup") Registrieren
        else if page === "/signup"
            nav.navbar.justify-content-start.left-offset
                a.navbar-brand.fs-4(href="/") Weathertop
                a.nav-link.active.fs-5(aria-current="page" href="/signup") Registrieren
        else if page === "/dashboard"
            nav.navbar.justify-content-start.left-offset.align-items-center
                a.navbar-brand.fs-4(href="/") Weathertop
                a.navbar-brand.fs-5(href="/dashboard") Dashboard
                form(action="/logout" method="get")
                    button.btn.btn-secondary.form-group(type="submit") Logout
        else if page === "/stations"
            nav.navbar.justify-content-start.left-offset.align-items-center
                a.navbar-brand.fs-4(href="/") Weathertop
                a.navbar-brand.fs-5(href="/dashboard") Dashboard
                form(action="/logout" method="get")
                    button.btn.btn-secondary.form-group(type="submit") Logout
        else if page === "/logout"
            nav.navbar.justify-content-start.left-offset
                a.navbar-brand.fs-4(href="/") Weathertop

        block content
